<body>
  <% if flash[:notice] %>
  <div class="flash">
  <p>
  	<%= flash[:notice] %>
  </p>
  </div>
<% end %>
<h1>Books</h1>
	<table>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
		<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show", book_path(book.id) %></td>
			<td><%= link_to "Edit", edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"%></td>
		</tr>
		<% end %>
	</table>


<h2>New book</h2>
<% if @book.errors.any? %>
	<div id="error_explanation">
	<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
	</div>
<% end %>

<!-- 投稿フォーム -->
<%= form_for(@book) do |f| %>
<div class="field">
<label for="book_title">Title</label><br>
<%= f.text_field :title %>
</div>

<div class="field">
<label for="book_body">Body</label><br>
<%= f.text_area :body %>
</div>
<div class="button">
<%= f.submit 'Create Book'%>
</div>
<% end %>
</body>