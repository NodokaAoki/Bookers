<h1>Editing Book</h1>
<% if @book.errors.any? %>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for(@book) do |f| %>
<div class="field">
	Title<br>
	<%= f.text_field :title %>
</div>
<div class="field">
	Body<br>
	<%= f.text_area :body %><br>
</div>
<div class="button">
	<%= f.submit 'Update Book' %><br>
</div>
<%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %>
<% end %>